@page
@using EntraPruefungsApp.Models
@model EntraPruefungsApp.Features.Exams.ReviewModel
@{
    ViewData["Title"] = Model.Exam?.Title ?? "Prüfungsbewertung";
}

<h1><i class="bi bi-clipboard-check me-2"></i>@Model.Exam?.Title - Bewertung</h1>

@if (TempData["GradingSuccess"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i><strong>Bewertung erfolgreich gespeichert!</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <div class="text-center mb-4">
        <a href="/exams" class="btn btn-primary"><i class="bi bi-arrow-left me-1"></i>Zurück zur Bewertungsübersicht</a>
    </div>
}
else if (Model.Exam == null)
{
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle me-2"></i>Prüfung nicht gefunden.
    </div>
    <a href="/exams" class="btn btn-secondary"><i class="bi bi-arrow-left me-1"></i>Zurück zur Übersicht</a>
}
else if (!Model.ExamResults.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>Es liegen aktuell keine Prüfungen zur Bewertung vor.
    </div>
    <a href="/exams" class="btn btn-secondary"><i class="bi bi-arrow-left me-1"></i>Zurück zur Übersicht</a>
}
else
{
    <p class="text-muted">@Model.ExamResults.Count abgelegte Prüfungen</p>
    
    @foreach (var result in Model.ExamResults)
    {
        var userName = result.UserId.Split('@')[0];
        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="bi bi-person me-2"></i>Benutzer: @userName</h5>
                <p class="mb-0 text-muted">Abgelegt am: @result.Date.ToString("dd.MM.yyyy HH:mm")</p>
            </div>
            <div class="card-body">
                
                @for (int i = 0; i < Model.Exam.Questions.Count; i++)
                {
                    var question = Model.Exam.Questions[i];
                    
                    if (question.Type == QuestionType.MultipleChoice)
                    {
                        var mcIndex = Model.GetMCQuestionIndex(i);
                        var userAnswer = mcIndex < result.Answers.Count ? result.Answers[mcIndex] : -1;
                        var isCorrect = userAnswer == question.CorrectAnswer;
                        
                        <div class="card mb-3 @(isCorrect ? "border-success border-3" : "border-danger border-3")" style="border-width: 3px !important;">
                            <div class="card-header d-flex justify-content-between align-items-center" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#question-@(result.UserId.GetHashCode())-@i">
                                <h6 class="mb-0"><i class="bi bi-@(isCorrect ? "check-circle-fill text-success" : "x-circle-fill text-danger") me-2"></i>Frage @(i + 1) (@question.MaxPoints Punkte): @question.Text</h6>
                                @if (result.IsGraded)
                                {
                                    <span class="badge @(isCorrect ? "bg-success" : "bg-danger")">@(isCorrect ? question.MaxPoints : 0) von @question.MaxPoints Punkten</span>
                                }
                            </div>
                            <div id="question-@(result.UserId.GetHashCode())-@i" class="collapse">
                                <div class="card-body">
                                    @for (int j = 0; j < question.Answers.Count; j++)
                                    {
                                        var isUserAnswer = j == userAnswer;
                                        var isCorrectAnswer = j == question.CorrectAnswer;
                                        var cssClass = isCorrectAnswer ? "text-success" : (isUserAnswer ? "text-danger" : "");
                                        
                                        <div class="form-check">
                                            <input class="form-check-input me-3" type="radio" disabled @(isUserAnswer ? "checked" : "") id="q@(i)_a@(j)" style="pointer-events: none; opacity: 1;">
                                            <label class="form-check-label @(isCorrectAnswer ? "text-success fw-bold" : "")" for="q@(i)_a@(j)" style="opacity: 1;">
                                                @question.Answers[j]
                                                @if (isCorrectAnswer)
                                                {
                                                    <i class="bi bi-check-circle-fill text-success ms-2"></i>
                                                }
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                    else if (question.Type == QuestionType.FreeText)
                    {
                        var ftIndex = Model.GetFreeTextQuestionIndex(i);
                        var userAnswer = ftIndex < result.FreeTextAnswers.Count ? result.FreeTextAnswers[ftIndex] : "";
                        var score = result.IsGraded && i < result.FreeTextScores.Count ? result.FreeTextScores[i] : 0;
                        
                        <div class="card mb-3 border-info border-3" style="border-width: 3px !important;">
                            <div class="card-header d-flex justify-content-between align-items-center" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#question-@(result.UserId.GetHashCode())-@i">
                                <h6 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Frage @(i + 1) (@question.MaxPoints Punkte): @question.Text</h6>
                                @if (result.IsGraded)
                                {
                                    <span class="badge bg-success">@score von @question.MaxPoints Punkten</span>
                                }
                            </div>
                            <div id="question-@(result.UserId.GetHashCode())-@i" class="collapse">
                                <div class="card-body">
                                    <div class="mt-3">
                                        <strong>Optimale Antwort (Referenz):</strong>
                                        <div class="border p-2 bg-success bg-opacity-10">@question.OptimalAnswer</div>
                                    </div>
                                    
                                    <div class="mt-3">
                                        <strong>Antwort des Teilnehmers:</strong>
                                        <div class="border p-2 bg-light">@(string.IsNullOrEmpty(userAnswer) ? "Keine Antwort" : userAnswer)</div>
                                    </div>
                                    
                                    @if (!result.IsGraded)
                                    {
                                        <div class="mt-3">
                                            <label class="form-label"><strong>Punkte vergeben:</strong></label>
                                            <div class="d-flex align-items-center gap-2">
                                                <input type="number" name="FreeTextScores[@ftIndex]" class="form-control" style="width: 80px;" min="0" max="@question.MaxPoints" value="0" form="gradeForm-@(result.UserId.GetHashCode())" />
                                                <span>von @question.MaxPoints Punkten</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
                
                @if (!result.IsGraded)
                {
                    <form method="post" class="mt-4" id="gradeForm-@(result.UserId.GetHashCode())">
                        <input type="hidden" name="userId" value="@result.UserId" />
                        <input type="hidden" name="examDate" value="@result.Date" />
                        
                        <button type="submit" class="btn btn-success"><i class="bi bi-check-lg me-1"></i>Bewertung abschließen</button>
                    </form>
                }
                else
                {
                    <div class="alert alert-success mt-4">
                        <i class="bi bi-check-circle me-2"></i>Diese Prüfung wurde bereits bewertet.
                    </div>
                }
            </div>
        </div>
    }
    
    <a href="/exams" class="btn btn-primary"><i class="bi bi-arrow-left me-1"></i>Zurück zur Übersicht</a>
}