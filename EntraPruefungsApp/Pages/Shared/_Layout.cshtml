<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EntraPruefungsApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EntraPruefungsApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid px-4">
                <a class="navbar-brand" asp-area="" asp-page="/Index">EntraPruefungsApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" style="gap: 1rem;">
                        @if (User.IsInRole("Participant") || User.IsInRole("Examiner"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark @(Context.Request.Path.StartsWithSegments("/Exams/Index") || (Context.Request.Path.StartsWithSegments("/Exams") && !Context.Request.Path.StartsWithSegments("/Exams/MyResults") && !Context.Request.Path.StartsWithSegments("/Exams/Exam") && !Context.Request.Path.StartsWithSegments("/Exams/ExamReview")) ? "active" : "")" asp-page="/Exams/Index"><i class="bi bi-clipboard-check me-1"></i>@(User.IsInRole("Examiner") ? "Bewerten" : "Pr√ºfungen")</a>
                            </li>
                        }
                        @if (User.IsInRole("Participant"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark @(Context.Request.Path.StartsWithSegments("/Exams/MyResults") ? "active" : "")" asp-page="/Exams/MyResults"><i class="bi bi-trophy me-1"></i>Meine Ergebnisse</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark @(Context.Request.Path.StartsWithSegments("/Admin") ? "active" : "")" asp-page="/Admin/Index"><i class="bi bi-gear me-1"></i>Admin</a>
                            </li>
                        }                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container px-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid px-4">
            &copy; 2026 - EntraPruefungsApp
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
