@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.OpenIdConnect

<div class="d-flex align-items-center">
@if (User.Identity?.IsAuthenticated == true)
{
    <div class="dropdown">
        <button class="btn btn-link text-dark p-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-person-circle" style="font-size: 1.5rem;"></i>
        </button>
        <ul class="dropdown-menu dropdown-menu-end">
            <li><h6 class="dropdown-header">Angemeldet als:</h6></li>
            <li><span class="dropdown-item-text">@User.Identity.Name</span></li>
            <li><hr class="dropdown-divider"></li>
            <li class="text-center">
                <form method="post" asp-page="/Logout" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm"><i class="bi bi-box-arrow-right me-2"></i>Logout</button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    <a asp-page="/Login" class="btn btn-primary"><i class="bi bi-box-arrow-in-right me-1"></i>Login</a>
}
</div>