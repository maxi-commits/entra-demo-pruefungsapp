@page
@using EntraPruefungsApp.Models
@model EntraPruefungsApp.Areas.Exams.Pages.IndexModel
@{
    ViewData["Title"] = "Prüfungen";
}

<h1>@(Model.IsExaminer ? "Prüfungen zur Bewertung" : "Verfügbare Prüfungen")</h1>
<br>
@if (Model.IsExaminer)
{
    <div class="row">
        @foreach (var exam in Model.Exams)
        {
            var examResultsCount = Model.AllResults.SelectMany(ur => ur.Value).Count(r => r.ExamId == exam.Id && !r.IsGraded);
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@exam.Title</h5>
                        <p class="card-text">@exam.Description</p>
                        <p class="text-muted">@examResultsCount zu bewertende Prüfungen</p>
                        <a asp-page="/Exams/ExamReview" asp-route-id="@exam.Id" class="btn btn-success"><i class="bi bi-pencil-square me-1"></i>Prüfung bewerten</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="row">
        @foreach (var exam in Model.Exams)
        {
            <div class="col-md-4 mb-3">
                <div class="card border-2" style="border-width: 2px !important;">
                    <div class="card-body">
                        <h5 class="card-title">@exam.Title</h5>
                        <p class="card-text">@exam.Description</p>
                        <p class="text-muted">@exam.Questions.Count Fragen</p>
                        <a asp-page="/Exams/Exam" asp-route-id="@exam.Id" class="btn btn-primary"><i class="bi bi-play-circle me-1"></i>Prüfung starten</a>
                    </div>
                </div>
            </div>
        }
    </div>
}